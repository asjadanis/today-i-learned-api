{
  "compilerOptions": {
    "target": "es5",
    "module": "NodeNext",
    "sourceMap": true,
    "outDir": "./dist",
    "strict": true,
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "typeRoots": [
      "./node_modules/@types",
      "./src/types/extended-types/global.d.ts"
    ]
  },
  "include": ["./src/**/*"]
}

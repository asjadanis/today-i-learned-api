{
  "compilerOptions": {
    "target": "es5",
    "module": "NodeNext",
    "sourceMap": true,
    "outDir": "./dist",
    "strict": true,
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "typeRoots": [
      "./node_modules/@types",
      "./src/types/extended-types/global.d.ts",
      "./src/types/express/index.d.ts"
    ],
    "baseUrl": "./",
    "rootDir": "src",
    "paths": {
      "@/utils/*": ["./src/utils/*"],
      "@/types/*": ["./src/types/*"],
      "@/routes/*": ["./src/routes/*"],
      "@/controllers/*": ["./src/controllers/*"],
      "@/services/*": ["./src/services/*"],
      "@/middlewares/*": ["./src/middlewares/*"],
      "@/configs/*": ["./src/configs/*"]
    }
  },
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "src/**/*.test.ts", "src/**/*.spec.ts"]
}
